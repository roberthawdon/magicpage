<?php

/**
 * OP-EZY MagicPage Admin Functions Module, Version 0.0.4
 * Reduces the amount of PHP and MySQL code in each theme by using the
 * "mpadmin" function defined in this module. This makes building themes
 * much easier too.
 */

function mpadmin($admfunction) {

global $con;
global $dbhost;
global $dbuser;
global $dbpassword;
global $dbdatabase;
global $dbprefix;
global $themes;
global $common;
global $viewpage;
global $pathfolder;
global $path;
global $MPTheme;

if ($admfunction == "") {

include("defaultpage.php");

}

if ($admfunction == "settings") {

include("mpsettings.php");

}

if ($admfunction == "submitsettings") {

include("submitsettings.php");

}


if ($admfunction == "pages") {

include("listpages.php");

}

if ($admfunction == "edit") {

include("editpage.php");

}

if ($admfunction == "login") {

include("login.php");

}

if ($admfunction == "checkuser") {

include("checkuser.php");

}

if ($admfunction == "logout") {

include("logout.php");

}

if ($admfunction == "navigation") {

include("editnavigation.php");

}

if ($admfunction == "navigationitem") {

include("editnavigationitem.php");

}

if ($admfunction == "submititem") {

include("submititem.php");

}

if ($admfunction == "themeadmin") {

include("themeadmin.php");

}

if ($admfunction == "themeadminsubmit") {

include("themeadminsubmit.php");

}

if ($admfunction == "usersettings") {

include("usersettings.php");

}

if ($admfunction == "edituser") {

include("edituser.php");

}

if ($admfunction == "submit") {

include("submit.php");

}

else {

}

}

?>